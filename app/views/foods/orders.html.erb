<h1>Food Orders</h1>
<table cellpadding="0" cellspacing="0" class="tablesorter" id="myTable">
<thead>
	<tr>
		<th>
			Hacker
		</th>
		<th>
			Order
		</th>
		<th>
			Requirements
		</th>
	</tr>
</thead>
<tbody>
<% @hackers.each do |hacker| %>
	<tr>
		<td><%= hacker.name %></td> 
		<td><%= hacker.food.name %></td>
		<td><%= hacker.requirments %></td>
	</tr>
<% end %>
</tbody>
</table>